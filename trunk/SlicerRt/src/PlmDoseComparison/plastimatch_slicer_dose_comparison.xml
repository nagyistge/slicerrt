<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Plastimatch.Developer Tools</category>
  <title>Dose Comparison</title>
  <description>Analyse RT dose difference</description>
  <version>0.0</version>
  <documentation-url>http://plastimatch.org</documentation-url>
  <license>BSD-style</license>
  <contributor>Please direct questions or suggestions to http://groups.google.com/group/plastimatch</contributor>
  <acknowledgements>Funding for this project has been provided by NIH 2-U54-EB005149 (NA-MIC), NIH/NCI 6-PO1 CA 21239, the Federal share of program income earned by MGH on C06CA059267, and the Progetto Rocca Foundation, a collaboration between MIT and Politecnico di Milano.</acknowledgements>
  <parameters>
    <label>Dose difference</label>
    <description>Input parameters</description>
    <boolean>
      <name>plmslc_need_dosediff</name>
      <label>Display dose image difference</label>
      <default>false</default>
      <longflag>--needdiff</longflag>
      <description>Check this box if you want to display voxel by voxel dose image difference</description>
    </boolean>
    <image>
      <longflag>plmslc_dose1_input_img</longflag>
      <name>plmslc_dose1_input_img</name>
      <label>Input dose image1</label>
      <channel>input</channel>
      <default>None</default>
      <description>Input dose image 1</description>
    </image>
    <image>
      <longflag>plmslc_dose2_input_img</longflag>
      <name>plmslc_dose2_input_img</name>
      <label>Input dose image2</label>
      <channel>input</channel>
      <default>None</default>
      <description>Input dose image 2</description>
    </image>
    <image>
      <longflag>plmslc_dose_diff_output_img</longflag>
      <name>plmslc_dose_diff_output_img</name>
      <label>Output dose difference</label>
      <channel>output</channel>
      <default>None</default>
      <description>Output dose difference</description>
    </image>
  </parameters>
  <parameters>
    <label>Create Isodose</label>
    <description>Option for creating isodose lines</description>
    <boolean>
      <name>plmslc_need_isodose</name>
      <label>Create isodose?</label>
      <default>false</default>
      <longflag>--isodose</longflag>
      <description>Check this box if you want to create isodose lines</description>
    </boolean>
    <image>
      <name>plmslc_input_dose_image</name>
      <label>Input Dose Image</label>
      <channel>input</channel>
      <longflag>--dose_image</longflag>
      <default>None</default>
    </image>

    <image type="label">
      <name>plmslc_isodose_composite</name>
      <label>Output labelmap</label>
      <channel>output</channel>
      <longflag>--compomap</longflag>
      <default>None</default>
      <description>Output labelmap for all thresholds</description>
    </image>
    <integer>
      <name>plmslc_isodose_value1</name>
      <longflag>--value1</longflag>
      <description>Isodose value in Gy</description>
      <label>Isodose Value 1</label>
      <default>10</default>
    </integer>
    <integer>
      <name>plmslc_isodose_value2</name>
      <longflag>--value2</longflag>
      <description>Isodose value in Gy</description>
      <label>Isodose Value 2</label>
      <default>20</default>
    </integer>
    <integer>
      <name>plmslc_isodose_value3</name>
      <longflag>--value3</longflag>
      <description>Isodose value in Gy</description>
      <label>Isodose Value 3</label>
      <default>30</default>
    </integer>
    <integer>
      <name>plmslc_isodose_value4</name>
      <longflag>--value4</longflag>
      <description>Isodose value in Gy</description>
      <label>Isodose Value 4</label>
      <default>40</default>
    </integer>
    <integer>
      <name>plmslc_isodose_value5</name>
      <longflag>--value5</longflag>
      <description>Isodose value in Gy</description>
      <label>Isodose Value 5</label>
      <default>50</default>
    </integer>
  </parameters>

<parameters>
    <label>Gamma analysis of dose difference</label>
    <description>Input parameters</description>
    <boolean>
      <name>plmslc_need_gamma</name>
      <label>Calculate gamma index?</label>
      <default>false</default>
      <longflag>--needgamma</longflag>
      <description>Check this box if you want to calculate gamma index</description>
    </boolean>
    <image>
      <longflag>plmslc_gamma_input_img1</longflag>
      <name>plmslc_gamma_input_img1</name>
      <label>Input dose image1</label>
      <channel>input</channel>
      <default>None</default>
      <description>Input dose image 1</description>
    </image>
    <image>
      <longflag>plmslc_gamma_input_img2</longflag>
      <name>plmslc_gamma_input_img2</name>
      <label>Input dose image2</label>
      <channel>input</channel>
      <default>None</default>
      <description>Input dose image 2</description>
    </image>
    <image>
      <longflag>plmslc_gamma_output</longflag>
      <name>plmslc_gamma_output</name>
      <label>Gamma output</label>
      <channel>output</channel>
      <default>None</default>
      <description>Destination for output gamma volume</description>
    </image>
    <string-enumeration>
      <name>labelmap_mode</name>
      <longflag>--labelmap_mode</longflag>
      <label>Labelmap Type:</label>
      <description>Type of labelmap to generate</description>
      <default>None</default>
      <element>None</element>
      <element>Pass</element>
      <element>Fail</element>
    </string-enumeration>
    <image type="label">
      <longflag>plmslc_gamma_labelmap</longflag>
      <name>plmslc_gamma_labelmap</name>
      <label>Labelmap output</label>
      <channel>output</channel>
      <default>None</default>
      <description>Destination for output labelmap</description>
    </image>
  <double>
    <name>plmslc_gamma_r_tol</name>
    <longflag>--gamma_r</longflag>
    <description>Distance tolerance, mm</description>
    <label>Distance tolerance, mm</label>
    <default>3</default>
  </double>

  <double>
    <name>plmslc_gamma_d_tol_gy</name>
    <longflag>--gamma_d_gy</longflag>
    <description>Dose tolerance in Gy</description>
    <label>Dose tolerance, Gy</label>
    <default>0</default>
  </double>
  <double>
    <name>plmslc_gamma_d_tol_percent</name>
    <longflag>--gamma_d_p</longflag>
    <description>Dose tolerance in percent of maximum dose</description>
    <label>Dose tolerance, percent</label>
    <default>0</default>
  </double>
  <double>
    <name>plmslc_gamma_g</name>
    <longflag>--gamma_g</longflag>
    <description>Max gamma to calculate</description>
    <label>Max gamma to calculate</label>
    <default>3</default>
  </double>

</parameters>


</executable>
